<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Color-->
    <Color x:Key="AppColorLight">#22FFFFFF</Color>
    <Color x:Key="AppColorDark">#22000000</Color>
    <Color x:Key="AppAccentColorLight">#05BCE6</Color>
    <Color x:Key="AppAccentColor">#016DB2</Color>
    <Color x:Key="AppAccentColorDark">#001A47</Color>
    
    <!--Brush-->
    <SolidColorBrush x:Key="AppBrushLight" Color="{StaticResource AppColorLight}" />
    <SolidColorBrush x:Key="AppBrushDark" Color="{StaticResource AppColorDark}" />
    <SolidColorBrush x:Key="AppAccentBrushLight" Color="{StaticResource AppAccentColorLight}" />
    <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}" />
    <SolidColorBrush x:Key="AppAccentBrushDark" Color="{StaticResource AppAccentColorDark}" />
    <LinearGradientBrush x:Name="AppLinearGradientBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="{StaticResource AppAccentColorLight}" />
        <GradientStop Offset="0.5" Color="{StaticResource AppAccentColor}" />
        <GradientStop Offset="1" Color="{StaticResource AppAccentColorDark}" />
    </LinearGradientBrush>

</ResourceDictionary>
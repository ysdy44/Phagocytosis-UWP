                <LineBreak />
                <Run>-------</Run>
                <LineBreak />

                <LineBreak />
                <Run>木有更多了</Run>
                <LineBreak />

            </TextBlock>
        </ScrollViewer>


        <!--Developer-->
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" 
                Background="{StaticResource SystemAltLowColor}"
                MinWidth="100"
                Visibility="{x:Bind ViewModel.Developer, Mode=OneWay}" >
            <StackPanel Margin="22,0" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource AppBoldTextBlockStyle}">
                    开发者态
                </TextBlock>
                <TextBlock>
                    <Run>点击</Run>                
                    <Run Text="&#xE104;" FontFamily="Segoe UI Symbol"/>
                    <Run>以编辑地图</Run>
                </TextBlock>
                <TextBlock>
                    <Run>点击</Run>                
                    <Run Text="&#xE188;" FontFamily="Segoe UI Symbol"/>
                    <Run>以打开地图文件</Run>
                </TextBlock>
            </StackPanel>
        </Border>


        <Button x:Name="BackButton" HorizontalAlignment="Left" VerticalAlignment="Top">
            <FontIcon Glyph="&#xE112;" FontSize="32" FontFamily="Segoe UI Symbol"
                      MirroredWhenRightToLeft="True"/>
        </Button>


        <!--Developer-->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <Grid>
                <Button x:Name="DeveloperButton" Opacity="0.1" >
                    <Viewbox Width="32" Height="32">
                        <SymbolIcon Symbol="Emoji2" />
                    </Viewbox>
                </Button>
                <Button x:Name="DeveloperButton2" Visibility="{x:Bind ViewModel.Developer, Mode=OneWay}" >
                    <Viewbox Width="32" Height="32">
                        <SymbolIcon Symbol="Emoji" />
                    </Viewbox>
                </Button>
            </Grid>

            <Button x:Name="EditButton" Visibility="{x:Bind ViewModel.Developer, Mode=OneWay}" >
                <FontIcon Glyph="&#xE104;" FontSize="32" FontFamily="Segoe UI Symbol"/>
            </Button>
            <Button x:Name="LocalFolderButton" Visibility="{x:Bind ViewModel.Developer, Mode=OneWay}" >
                <FontIcon Glyph="&#xE188;" FontSize="32" FontFamily="Segoe UI Symbol"/>
            </Button>
        </StackPanel>


    </Grid>
</Page>